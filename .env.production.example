# ==================================================
# CONFIGURAÇÃO DOCKER - PRODUÇÃO SERVIDOR
# ==================================================
# Este arquivo contém configurações para deploy em
# servidor de produção com domínio próprio e HTTPS
#
# Para uso local, use .env.docker.example
# ==================================================

# Application
APP_NAME="Sistema de Tickets"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://seudominio.com.br
APP_PORT=8000
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=tickets
DB_USERNAME=tickets
DB_PASSWORD=ALTERAR_SENHA_FORTE_AQUI

# Cache & Sessions (Production: usa Redis para melhor performance)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue (Production: usa Redis com workers para processamento em background)
QUEUE_CONNECTION=redis

# Redis (necessário para cache, sessions e queue em produção)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_SCHEME=
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD="sua_senha_ou_app_password_aqui"
MAIL_FROM_ADDRESS="seu_email@gmail.com"
MAIL_FROM_NAME="${APP_NAME}"

# Docker
RUN_SEED=false

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error
